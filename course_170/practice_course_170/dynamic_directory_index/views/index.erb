<!doctype html>
<html>
<head>
    <meta charset="utf-8">
</head>

<body>
  <h1>Dynamic Directory Index</h1>
  <ul>
    <% @files.each do |file| %>
      <li>
        <a href="<%= file %>"><%= file %></a>
      </li>
    <% end %>
  </ul>

<p>
  <% if params[:sort] == "desc" %>
    <a href="/">Sort ascending</a>
  <% else %>
    <a href="/?sort=desc">Sort descending</a>
  <% end %>
</body>
</html>